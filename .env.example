# Example environment variables.
# Copy this file to .env and fill in your specific values.

# --- PostgreSQL Database Configuration ---
POSTGRES_DRIVER=postgresql
POSTGRES_ISOLATION_LEVEL=AUTOCOMMIT
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=public_detective

# --- PNCP API Configuration ---
PNCP_PUBLIC_QUERY_API_URL=https://pncp.gov.br/api/consulta/v1/
PNCP_INTEGRATION_API_URL=https://pncp.gov.br/api/pncp/v1/

# --- Application Configuration ---
LOG_LEVEL=INFO

# Comma-separated list of IBGE codes for target cities.
# Example: SÃ£o Paulo, Rio de Janeiro, Belo Horizonte, Campinas, etc.
TARGET_IBGE_CODES=3550308,3304557,3106200,3518800,4205407,4314902,5208707,2927408

# --- Google Cloud Platform (GCP) Configuration ---
GCP_PROJECT=public-detective
GCP_PUBSUB_TOPIC_PROCUREMENTS=procurements
GCP_PUBSUB_HOST=http://localhost:8085/

# Your Google Cloud Gemini API Key. This is a required secret.
GCP_GEMINI_API_KEY=
GCP_GEMINI_MODEL=gemini-2.5-pro
