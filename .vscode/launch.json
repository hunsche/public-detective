    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/source/cli",
            "console": "integratedTerminal",
            "args": [
                // "start-date",
                // "end-date"
            ],
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Worker",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/source/worker",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
