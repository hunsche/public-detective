    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "purpose": [
                "debug-test"
            ],
            "args": [
                "${file}",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/source/cli",
            "console": "integratedTerminal",
            "args": [],
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        },
    ]
}
